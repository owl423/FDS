          // 믹스인 정의
          mixin accordion(data)
            article.ui-accordion.menu.box
              each links, label in data
                h4.menu-label
                  a.box(href)= label
                ul.menu-list
                  each link in links
                    li
                      each content in link
                        a(href)= content

          // 믹스인 사용
